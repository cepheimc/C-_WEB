@model IQueryable<JobExchange.Models.EmployeeViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Список</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}
<table class="table">
    <tr>        
        <th>
            @Html.ActionLink("Имя", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.ActionLink("Фамилия", "Index", new { sortOrder = ViewBag.SurnameSortParm })
        </th>
        <th>
            Адрес работника
        </th>
      
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeAddress)
            </td>
            
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.EmployeeId }) |
                @Html.ActionLink("Детали", "Details", new { id = item.EmployeeId }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.EmployeeId })
            </td>
        </tr>
    }

</table>


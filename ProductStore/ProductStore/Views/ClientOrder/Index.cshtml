@model IQueryable<ProductStore.Models.ClOrderViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Заказы клиентов</h2>

<p>
    @Html.ActionLink("Загрузить новый заказ клиента", "Create")
</p>

<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Имя
        </th>
        <th>
            Телефон
        </th>
        <th>
            Адрес
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.ClientOrderId
            </td>
            <td>
                @item.ClientName
            </td>
            <td>
                @item.ClientPhone
            </td>
            <td>
                @item.ClOrderAddress
            </td>
            <td>
                @Html.ActionLink("Детали", "Details", new { id = item.ClientOrderId }) |
                @Html.ActionLink("Редактировать", "Edit", new { id = item.ClientOrderId }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.ClientOrderId })
            </td>
        </tr>
    }

</table>

@model IQueryable<ProductStore.Models.ShOrderViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Заказы магазина</h2>

<p>
    @Html.ActionLink("Загрузить новый заказ магазина", "Create")
</p>

<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Дата
        </th>
        <th>
            Адрес
        </th>
        <th>
            Дата завоза
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.ShopOrderId
            </td>
            <td>
                @item.ShOrderDate
            </td>
            <td>
                @item.ShopAddress
            </td>
            <td>
                @item.ShExpDate
            </td>
            <td>
                @Html.ActionLink("Детали", "Details", new { id = item.ShopOrderId }) |
                @Html.ActionLink("Редактировать", "Edit", new { id = item.ShopOrderId }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.ShopOrderId })
            </td>
        </tr>
    }

</table>